@model Projekt7Edyszyn.ViewModels.AddBaseViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var className = Model.Customers.Count > 0 ? "popular" : null;

}

<h2 class="@className">@Model.Base.Name</h2>

<table id="customers" class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>Customers</th>
            <th>Discount Rate</th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Customers.Count == 0)
        {
            <text>Brak danych w Base</text>
        }
        else
        {
            <tr>
                @foreach (var customer in Model.Customers)
                {
                    <td>@customer.Name</td>
                }
            </tr>
        }
    </tbody>
</table>
